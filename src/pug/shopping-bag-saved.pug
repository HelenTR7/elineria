                                    +counter({
                                        value: 2,
                                        min_value: 1,
                                        max_value: 3,
                                        unit: '',
                                    }).counter--sm
                                +e.__sb-btn
                                    a(href='#').icon-link.active
                                        +icon('i-remove')
