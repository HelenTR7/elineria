                                +e.__info
                                    +e('a').__title(href="#") Midi dress with button closure
                                    +e('ul').__list
                                        li Size: 2 year
                                        li Vendor code: 3000000015
                                        li.red Left in stock: 3 units
                            +e.__counter-box
